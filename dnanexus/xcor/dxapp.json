            "folder": "/ChIP-seq/assets/"
          },
          {
            "name": "common_asset",
            "project": "project-BKpvFg00VBPV975PgJ6Q03v6",
            "version": "0.0.1",
            "folder": "/ChIP-seq/assets/"
          },
          {
